    "version": "0.1.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            // "preLaunchTask": "build",
            "smartStep": false,
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                // "--log-error",
                "-r",
                "source-map-support/register",
                "./src/**/Lexer.spec.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/cli.ts",
            "args": [
                "--root-dir",
                "C:/projects/PlumMediaCenter.RokuOld",
                "--watch",
                "--noZip",
                "--files",
                "manifest",
                "source/**/*.*"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "cwd": "C:/projects/PlumMediaCenter.RokuOld",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}