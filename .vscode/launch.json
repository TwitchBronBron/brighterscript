{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/benchmarks/index.js",
            "request": "launch",
            "args": [
                "--versions",
                "current",
                "--targets",
                "lex-parse-validate",
                "--noprepare"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Debug Tests (Current file)",
            "type": "node",
            "request": "launch",
            "smartStep": false,
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "sourceMaps": true,
            "args": [
                "${relativeFile}"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/typescript/**",
                "!**/node_modules/vscode-languageserver/**"
            ]
        }
    ]
}
